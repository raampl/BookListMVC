@model IEnumerable<BookListMVC.Models.Book>
@{
    ViewData["Title"] = "Index";
}

<br />

<h3>Book List</h3>

<p>
    <a asp-action="Create" class="btn btn-sm btn-primary">Create New</a>
</p>

@if (Model.Count() > 0)
{
    <br />
    <br />

    <table class="table table-striped table-bordered">
        <tr class="table-secondary">
            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Author)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Price)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Price)
                </td>
                <td>
                    <a asp-route-id="@item.Id" asp-action="Edit" class="btn btn-success btn-sm">Edit</a>
                    <a asp-route-id="@item.Id" asp-action="Details" class="btn btn-primary btn-sm">Details</a>
                    <a asp-route-id="@item.Id" asp-action="Delete" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <p>
        No books available!
    </p>
}
